<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/menu_selected</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@color/menu_selected</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/menu_selected</item>
        <item name="colorControlHighlight">@color/menu_selected</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/menu_selected</item>
    </style>
</resources>